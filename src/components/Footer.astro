---
import { getImage, Image } from "astro:assets";

import logo from "../assets/logo.webp";

const optimizedLogo = await getImage({
  src: logo,
  format: "webp",
});
---

<div
  class="flex flex-col pt-32 pb-12 px-[20px] gap-[20px] md:gap-[140px] mx-auto size-full max-w-[90rem] md:max-w-[75rem] md:flex-row"
>
  <div class="flex-1 flex flex-col">
    <a href="/Seoforma" class="flex items-center py-3">
      <img
        src={optimizedLogo.src}
        alt="Seoforma logo"
        class="mr-3 h-6 sm:h-9 w-auto"
      />
      <span
        class="self-center text-xl text-white font-semibold whitespace-nowrap text-2xl md:text-5xl font-[700]"
      >
        Seoforma
      </span>
    </a>
    <div
      class="flex-1 flex flex-row md:flex-col md:ml-12 justify-around md:justify-normal text-center items-center md:text-left"
    >
      <a class="text-sm w-full md:text-md">AVISO LEGAL</a>
      <span class="md:hidden inline px-4">|</span>
      <a class="text-sm w-full md:text-md">POLÍTICA DE PRIVACIDAD</a>
      <span class="md:hidden inline px-4">|</span>
      <a class="text-sm w-full md:text-md">POLÍTICA DE COOKIES</a>
    </div>
  </div>
  <div class="flex-1">
    <h2
      class="bg-gradient-to-r from-lime-500 via-green-400 to-lime-500 bg-clip-text text-transparent py-3 text-2xl md:text-5xl font-[700]"
    >
      Contáctanos
    </h2>
    <div class="flex-1 flex flex-col">
      <p class="text-sm md:text-md">(55) 1234 5678</p>
      <p class="text-sm md:text-md">Av. Ilustres 123, CDMX. C.P. 01730</p>
      <p class="text-sm md:text-md">hola@sitioweb.com</p>
    </div>
  </div>
</div>
